    id INTEGER PRIMARY KEY AUTO_INCREMENT,
    first_name VARCHAR(128) NOT NULL,
    last_name VARCHAR(128) NOT NULL,
    avg_mark NUMERIC (2, 1) CHECK (avg_mark BETWEEN 0 AND 5),
    gender CHAR (1) CHECK (gender IN('M', 'F'))
);

